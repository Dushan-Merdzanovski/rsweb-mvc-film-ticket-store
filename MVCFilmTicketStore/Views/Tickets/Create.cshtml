@model MVCFilmTicketStore.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BoughtTime" class="control-label"></label>
                <input asp-for="BoughtTime" class="form-control" />
                <span asp-validation-for="BoughtTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsValid" class="control-label"></label>
                <input asp-for="IsValid" class="form-control" />
                <span asp-validation-for="IsValid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser" class="control-label"></label>
                <input asp-for="AppUser" class="form-control" />
                <span asp-validation-for="AppUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectionId" class="control-label"></label>
                <select asp-for="ProjectionId" class ="form-control" asp-items="ViewBag.ProjectionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DownloadTicketUrl" class="control-label"></label>
                <input type="file" name="file" />
                @if (ViewBag.Message != null)
                {
                    <div class="alert" style="margin-top:20px">
                        @ViewBag.Message
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
